rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // permite leitura publica para o cardapio, mas escrita só pra quem tá logado
    match /cardapio/{itemId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // permite leitura publica para as categorias, mas escrita só pra quem tá logado
    match /categorias/{categoriaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // para clientes, só permite ler e escrever se o usuário estiver logado
    match /clientes/{clienteId} {
      allow read, write: if request.auth != null;
    }

    // para as notas, a mesma coisa: só quem tá logado pode ler e escrever
    match /notas/{notaId} {
    	allow read: if true;
      allow write: if request.auth != null;

      // Regra para a subcoleção 'produtos'
      match /produtos/{produtoId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
